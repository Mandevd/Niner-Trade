<%- include('../partials/header.ejs')%>
<main class="main-content2">
<div class=" center-container">
    <div class="card-deck">
        <% if(trade1 && trade2) { %>
        <div class="card" style="width: 25rem;">
          <img class="card-img-top" src='<%=trade1.image%>' alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%= trade1.title%></h4>
            <h5 class="card-title"><%= trade1.director%></h5>
            <p class="card-text"><%= trade1.content%></p>
            
          </div>
        </div>
        <div class="card" style="width: 25rem;">
          <img class="card-img-top" src='<%= trade2.image%>' alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%= trade2.title%></h4>
            <h5 class="card-title"><%= trade2.director%></h5>
            <p class="card-text"><%= trade2.content%></p>
            
          </div>
        </div>

        <div class="col-4" style="width: 25rem;">
        <div class="">
        <form> 
            <% if(user.isOfferInitiator){ %>
            </br>
                <button class="button delete-btn" type="submit"  formmethod = "POST" formaction = "/connections/<%=offerTrade.id%>/cancelOffer?_method=DELETE">Cancel Offer</button>
            <% } else { %>
            </br>
                <button class="button update-btn" type="submit" formmethod="POST" formaction="/connections/<%=offerTrade.id%>/acceptOffer?_method=PUT"> Accept</button> &nbsp; &nbsp;
                <button class="button delete-btn" type="submit"  formmethod="POST" formaction="/connections/<%=offerTrade.id%>/rejectOffer?_method=DELETE">Reject</button>  
            <%}%>
        </form>
        </div>
    </div>    
        
            <% } else { %>
            <p class="textfont"> You haven't selected any trades to trade</p>
            <%}%>
        
        
      </div>
 </div>   
</main> 
<%- include('../partials/footer.ejs')%>