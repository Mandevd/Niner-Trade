<!DOCTYPE html>
<html lang = "en">
    <head>
        <title>Niner Film Trade</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

        <nav class="navbar navbar-expand-md ">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="color: white";  >Niner Film Trade
                    <img src="/imgs/reel.png" alt="reel">
                </a>
                <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#CollapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="#CollapsibleNavbar">
                    <ul class="navbar-nav ml-auto">
                        <% if(!user){ %>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/login">Login</a>
                            </li>
                          
                            <li class="nav-item">
                                <a class="nav-link" href="/users/new">Signup</a>
                            </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/items/new">Start New Trade</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/users/profile">Profile</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/users/logout">Logout</a>
                        </li>
                        <% } %>
                    </ul>
                    
                </div>
            </div>   
        </nav>
        <nav class="navbar-trade navbar-expand-md ">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/items">Trades</a>
                </li>
            </ul>
        </nav>


        <% if(errorMessages.length > 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='error'>
                    <%=message%>
                </div>
            <%});%>
        <%}%>
        
        <% if(successMessages.length > 0) {%>
            <% successMessages.forEach(message=>{%>
                <div class='success'>
                    <%=message%>
                </div>
            <%});%>
        <%}%>



